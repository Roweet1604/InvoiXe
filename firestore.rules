rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Receipts are immutable once created - no updates or deletes allowed
    match /receipts/{receiptId} {
      // Only authenticated users can create receipts
      allow create: if request.auth != null 
        && request.auth.uid == request.resource.data.userId
        && request.resource.data.locked == true
        && request.resource.data.tamperProof == true;
      
      // Anyone can read receipts for verification purposes
      allow read: if true;
      
      // CRITICAL: No updates or deletes allowed - receipts are immutable
      allow update: if false;
      allow delete: if false;
    }
    
    // Additional security: Log access attempts
    match /access_logs/{logId} {
      allow create: if true;
      allow read, update, delete: if false;
    }
  }
}